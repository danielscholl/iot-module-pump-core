{
  "$schema-template": "1.0.1",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {}
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "env": {
              "storageFolder": {
                "value": "#{ModuleStoragePath}#"
              }
            },
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0.9-rc2",
              "createOptions": {
                "HostConfig": {
                  "Binds": [
                    "#{HostStoragePath}#:#{ModuleStoragePath}#"
                  ]
                }
              }
            }
          },
          "edgeHub": {
            "type": "docker",
            "env": {
              "storageFolder": {
                "value": "#{ModuleStoragePath}#"
              },
              "experimentalfeatures__enabled": {
                "value": true
              },
              "experimentalfeatures__enableMetrics": {
                  "value": true
              }
            },
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0.9-rc2",
              "createOptions": {
                "User": "#{ContainerUser}#",
                "HostConfig": {
                  "Binds": [
                    "#{HostStoragePath}#:#{ModuleStoragePath}#"
                  ],
                  "PortBindings": {
                    "9600/tcp": [
                      {
                        "HostPort": "9600"
                      }
                    ],
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "pumpModule": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../pumpModule>}",
              "createOptions": {
                "HostConfig": {
                  "LogConfig": {
                    "Type": "json-file",
                    "Config": {
                      "max-size": "2m",
                      "max-file": "3"
                    }
                  }
                }
              }
            }
          },
          "metricsCollector": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "veyalla/metricscollector:0.0.4-#{platform}#"
            },  
            "env": {
              "AzMonWorkspaceId": {
                "value": "#{WORKSPACE_ID}#"
              },
              "AzMonWorkspaceKey": {
                "value": "#{WORKSPACE_KEY}#"
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "pumpModuleToIoTHub": "FROM /messages/modules/pumpModule/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "pumpModule": {
      "properties.desired": {
        "SendInterval": 2000,
        "SendData": true,
        "EventCount": 1
      }
    },
    "metricsCollector": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "scrapeFrequencySecs": 300,
        "metricsFormat": "Json",
        "syncTarget": "AzureLogAnalytics",
        "endpoints": {
            "edgeHub": "http://edgeHub:9600/metrics"
        }
      }
    }
  }
}